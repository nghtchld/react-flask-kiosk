{% extends "template.html.jinja" %}

{% block title %}Cart{% endblock %}

{% block content %}
    {% if order %}
        <div class="order-item" id="0" food="">
                <span class="order-item-name">Line</span>
                <span class="order-item-image"></span>
                <span class="order-item-name">Menu Item</span>
                <span class="order-item-amount">Amount</span>
                <br>
                <span class="order-item-price">Price</span>
            </div>
            <div class="order-sep"></div>
        {% for item in order %}
            <div class="order-item" id="{{ item.id }}" food="{{ item.foodID }}">
                <span class="order-item-name">{{ item.line_no }}</span>
                <img class="order-item-image" src="{{ item.default_image }}" alt="default image">
                <span class="order-item-name">{{ item.name }}</span>
                <span class="order-item-amount">{{ item.amount }}</span>
                <br>
                <span class="order-item-price">${{ item.price }}</span>
            </div>
            <div class="order-sep"></div>
        {% endfor %}
    {% else %}
        <h1>Oops!</h1>
        <p>
            This page hasn't loaded properly. Please refresh.
        </p>
        <span class="subtxt">
            If this problem persists, please contact the site administrator.
        </span>
    {% endif %}
{% endblock %}